<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

    <OCD description="Decanter Solr Appender"
         name="Solr Appender" id="org.codice.solr.appender.SolrAppender">

        <AD description="The maximum batch size for solr writes."
                name="Batch Size" id="batchSize"
                required="true" type="Integer" default="100"/>

